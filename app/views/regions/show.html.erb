<h1><%= @region.name %></h1>
<p>
  <b>EVE-Central ID:</b>
  <%= @region.central_id %>
</p>

<h2>Systems</h2>
<table class="table table-bordered table-striped table-small tablesorter">
  <thead>
    <tr>
      <th>Name</th>
      <th>Security<br/>Status</th>
      <th>True<br/>Security</th>
      <th>EVE-Central ID</th>
    </tr>
  </thead>
  <tbody>
    <% @region.systems.each do |system| %>
      <tr>
        <td><%= link_to system.name, system %></b></td>
        <td><%= '%.1f' % system.security %></td>
        <td><%= '%.5f' % system.security %></td>
        <td><%= system.central_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr/>

<%= link_to 'Edit', edit_region_path(@region), class: 'btn btn-default' %>
<%= link_to 'Back to List', regions_path, class: 'btn btn-default' %>
