<h1>Listing Planetary Commodities</h1>
<table class="table table-bordered table-striped tablesorter">
  <thead>
    <tr>
      <th>Name</th>
      <th>Volume<br/>(m<sup>3</sup>)</th>
      <th>EVE-Central ID</th>
      <% if @can_edit %>
        <th class="edit-field">Edit</th>
      <% end %>
    </tr>
  </thead>
  
  <tbody>
    <% @commodities.each do |commodity| %>
      <tr>
        <td><%= link_to commodity.name, commodity %></td>
        <td><%= commodity.volume %></td>
        <td><%= commodity.central_id %></td>
        <% if @can_edit %>
          <td class="edit-field"><%= link_to image_tag('/edit.png', :alt => 'Edit'), edit_planetary_commodity_path(commodity) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
