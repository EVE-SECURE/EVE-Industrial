<p id="notice"><%= notice %></p>

<h1><%= @ice_ore.name %></h1>
<p>
  <b>Volume:</b>
  <%= @ice_ore.volume %> m<sup>3</sup>
</p>

<p>
  <b>Central:</b>
  <%= @ice_ore.central_id %>
</p>

<h2>Composition</h2>
<table class="table table-bordered table-striped table-small tablesorter">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Share</th>
    </tr>
  </thead>
  <tbody>
    <% @ice_ore.ice_yields.each do |y| %>
      <tr>
        <td><%= link_to y.ice_product.name, y.ice_product %></b></td>
        <td><%= y.quantity %></td>
        <td><%= "%.2f" % y.percentage %> %</td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<a class="btn btn-primary" href="<%= add_yields_ice_ore_path(@ice_ore) %>" role="button">Edit Yields »</a>
<hr />
<a class="btn btn-primary" href="<%= edit_ice_ore_path(@ice_ore) %>" role="button">Edit »</a>
<a class="btn btn-primary" href="<%= ice_ores_path %>" role="button">Back to List »</a>
