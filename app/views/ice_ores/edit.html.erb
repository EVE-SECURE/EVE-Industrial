<h1>Editing Ice Ore</h1>
<%= form_for @ice_ore, html: { class: 'form-horizontal' } do |f| %>
  <% if @ice_ore.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ice_ore.errors.count, "error") %> prohibited this ice_ore from being saved:</h2>
      <ul>
      <% @ice_ore.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-sm-2' %>
    <div class="col-sm-2">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :volume, class: 'control-label col-sm-2' %>
    <div class="col-sm-2">
      <%= f.text_field :volume, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :central_id, class: 'control-label col-sm-2' %>
    <div class="col-sm-2">
      <%= f.number_field :central_id, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= f.submit class: 'btn btn-primary full-width' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= link_to 'Show', @ice_ore, class: 'btn btn-default ' %>
      <%= link_to 'Back', ice_ores_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
