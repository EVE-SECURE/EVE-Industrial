<h1>Listing Ice Products</h1>
<table class="table table-bordered table-striped tablesorter">
  <thead>
    <tr>
      <th>Name</th>
      <th>Volume (m<sup>3</sup>)</th>
      <th>EVE-Central ID</th>
      <% if @can_edit %>
        <th class="edit-field">Edit</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @ice_products.each do |ice_product| %>
      <tr>
        <td><%= link_to ice_product.name, ice_product %></td>
        <td><%= '%.2f' % ice_product.volume %></td>
        <td><%= ice_product.central_id %></td>
        <% if @can_edit %>
          <td class="edit-field"><%= link_to image_tag('/edit.png', :alt => 'Edit'), edit_ice_product_path(ice_product) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
