<%= form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :login, class: 'control-label col-sm-1' %>
    <div class="col-sm-2">
      <%= f.text_field :login, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'control-label col-sm-1' %>
    <div class="col-sm-2">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_admin, class: 'control-label col-sm-1' %>
    <div class="col-sm-2">
      <%= f.check_box :is_admin, class: 'checkbox' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= f.submit class: 'btn btn-primary full-width' %>
    </div>
  </div>
  
  <% unless @user.new_record? %>
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-2">
        <%= link_to 'Back', @user, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
<% end %>
