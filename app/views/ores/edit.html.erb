<h1>Editing Ore</h1>
<%= form_for @ore, html: { class: 'form-horizontal' } do |f| %>
  <% if @ore.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ore.errors.count, 'error') %> prohibited this ore from being saved:</h2>

      <ul>
      <% @ore.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-sm-1' %>
    <div class="col-sm-2">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :volume, class: 'control-label col-sm-1' %>
    <div class="col-sm-2">
      <%= f.text_field :volume, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :refine, class: 'control-label col-sm-1' %>
    <div class="col-sm-2">
      <%= f.number_field :refine, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= f.submit class: 'btn btn-primary full-width' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= link_to 'Show', @ore, class: 'btn btn-default ' %>
      <%= link_to 'Back', ores_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
